%table.full-call-to-action{:width => "100%", :align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0"}
  %tr
    %td{:width => "100%", :height => "10", :align => "left", :colspan => "3"}
      = '&nbsp;'
  %tr
    %td.hide-on-small{:width => '80'}
      = '&nbsp;'
    %td.full-call-to-action{:align => "center", :height => "46",:width => '320', :style => "background-color: #{brand_blue};border-radius: 4px;border: 1px solid #{brand_dark_blue}"}
      %a{:href => "#", :style => "#{email_font_family}text-transform: uppercase;border-radius: 4px;background-color: #{brand_blue};color: #FFFFFF;display: block;line-height:46px;text-decoration: none;"}
        %font{:color => "#FFFFFF"}
          = "Call to action"
    %td.hide-on-small{:width => '80'}
      = '&nbsp;'
  %tr
    %td{:width => "100%", :height => "10", :align => "left", :colspan => "3"}
      = '&nbsp;'

